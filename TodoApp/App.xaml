<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="TodoApp.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Акцент -->
            <Color x:Key="Accent">#4F46E5</Color>

            <!-- Общие стили с AppThemeBinding -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light=#FFFFFF, Dark=#0E0E11}" />
            </Style>

            <Style x:Key="H1" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#1E1E22, Dark=#F5F6F8}"/>
                <Setter Property="FontSize" Value="26"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>

            <Style x:Key="Section" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#1E1E22, Dark=#F5F6F8}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="Margin" Value="0,8,0,6"/>
            </Style>

            <Style x:Key="Hint" TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#6B7280, Dark=#A8ACB7}"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>

            <!-- Карточка -->
            <Style x:Key="Card" TargetType="Border">
                <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light=#F4F5F7, Dark=#1A1B20}"/>
                <Setter Property="StrokeShape">
                    <Setter.Value>
                        <RoundRectangle CornerRadius="14"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Shadow">
                    <Setter.Value>
                        <Shadow Brush="#66000000" Offset="0,6" Radius="12"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="Margin" Value="0,10,0,0"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Accent}"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="14,10"/>
            </Style>

            <Style TargetType="Picker">
                <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light=#FFFFFF, Dark=#0E0E11}" />
                <Setter Property="TextColor"
                Value="{AppThemeBinding Light=#1E1E22, Dark=#F5F6F8}" />
                <Setter Property="TitleColor"
                Value="{AppThemeBinding Light=#6B7280, Dark=#A8ACB7}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
